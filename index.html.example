function urlWithHash($url){
    # Search for current version of the provided file using filename_githash.ext convention
    $path_match = preg_match("/^\/(.+\/)(.*?)\.(.+)$/", $url, $path_array);
    $matches = null;

    if ($path_match == 1) {
        $matches = glob($path_array[1].$path_array[2].'*.'.$path_array[3]);
    }

    if (is_array($matches)) {
        echo '/'.$matches[0];
    } else {
        echo '';
    }
}
